<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TabHost
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/details_tab">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/loan_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/label_size"
                        android:textAlignment="center"
                        android:text="Mortgage" />

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:textSize="@dimen/result_size"
                        android:textAlignment="center"
                        android:text="@string/default_mortgage"
                        android:id="@+id/mortgage_value"
                        android:maxLines="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">

                            <EditText
                                android:id="@+id/price_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:ems="10"
                                android:hint="Property Price"
                                android:inputType="numberDecimal"
                                android:textSize="30sp"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/downpayment"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">

                            <EditText
                                android:id="@+id/downpayment_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:ems="10"
                                android:hint="Down Payment"
                                android:inputType="numberDecimal"
                                android:textSize="30sp"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/apr"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">

                            <EditText
                                android:id="@+id/apr_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:ems="10"
                                android:hint="Annual Percentage Rate"
                                android:inputType="numberDecimal"
                                android:textSize="30sp"/>

                        </android.support.design.widget.TextInputLayout>




                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/period"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25">

                            <EditText
                                android:id="@+id/period_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:ems="10"
                                android:hint="Period"
                                android:inputType="numberDecimal"
                                android:textSize="30sp"/>

                        </android.support.design.widget.TextInputLayout>





                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/property_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:text="Property Type"/>





                        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"
                            android:orientation="horizontal"
                            >

                            <RadioButton android:id="@+id/house_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="House"
                                android:onClick="onRadioButtonClicked"/>

                            <RadioButton android:id="@+id/townhouse_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Town House"
                                android:onClick="onRadioButtonClicked"/>

                            <RadioButton android:id="@+id/condo_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Condo"
                                android:onClick="onRadioButtonClicked"/>
                        </RadioGroup>




                        <!--<android.support.design.widget.TextInputLayout-->
                            <!--android:id="@+id/property_type"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="0dp"-->
                            <!--android:layout_weight="0.2">-->

                            <!--<EditText-->
                                <!--android:id="@+id/property_type_value"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="match_parent"-->
                                <!--android:layout_centerHorizontal="true"-->
                                <!--android:layout_centerVertical="true"-->
                                <!--android:ems="10"-->
                                <!--android:hint="Property Type"-->
                                <!--android:inputType="numberDecimal"-->
                                <!--android:textSize="30sp"/>-->

                        <!--</android.support.design.widget.TextInputLayout>-->


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/street"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">

                            <EditText
                                android:id="@+id/street_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:ems="10"
                                android:hint="Street Address"
                                android:inputType="numberDecimal"
                                android:textSize="30sp"/>

                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">

                            <EditText
                                android:id="@+id/city_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:ems="10"
                                android:hint="City"
                                android:inputType="numberDecimal"
                                android:textSize="30sp"/>

                        </android.support.design.widget.TextInputLayout>


                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:entries="@array/state_arrays"
                        android:prompt="@string/state_label" />


                        <!--<android.support.design.widget.TextInputLayout-->
                            <!--android:id="@+id/state"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="0dp"-->
                            <!--android:layout_weight="0.2">-->

                            <!--<EditText-->
                                <!--android:id="@+id/state_value"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="match_parent"-->
                                <!--android:layout_centerHorizontal="true"-->
                                <!--android:layout_centerVertical="true"-->
                                <!--android:ems="10"-->
                                <!--android:hint="State"-->
                                <!--android:inputType="numberDecimal"-->
                                <!--android:textSize="30sp"/>-->

                        <!--</android.support.design.widget.TextInputLayout>-->


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/zip"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">

                            <EditText
                                android:id="@+id/zip_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:ems="10"
                                android:hint="Zip Code"
                                android:inputType="numberDecimal"
                                android:textSize="30sp"/>

                        </android.support.design.widget.TextInputLayout>



                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Clear" />

    </LinearLayout>

</LinearLayout>